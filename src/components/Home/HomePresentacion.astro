---
import EnlaceAnimadoTexto from "../EnlaceAnimadoTexto.astro";
import TextPresentacion from "../TextPresentacion.astro";
import { presentacion } from "../../data/presentacion";
---

<section
    class='grid place-content-center h-screen max-h-[444px] md:max-h-[623px] lg:max-h-[780px] max-w-[600px] mx-auto [text-wrap:_balance] lg:[text-wrap:_initial] sm:px-4 md:px-6 text-text2 dark:text-textDark2'
>
    <div
        class='font-DmSans font-medium text-[20px] md:text-[24px] lg:text-[33px]'
    >
        {presentacion.map((parrafo) => <TextPresentacion text={parrafo} />)}
    </div>
    <div
        class='letterAnimate mt-6 text-4xl md:text-5xl lg:text-5xl font-bold font-homeLetter text-text4 dark:text-text3'
    >
        <EnlaceAnimadoTexto text='Acerca de mÃ­' textDecoration={true} ruta="/about"/>
    </div>
</section>

<style is:inline>

    .letterAnimate {
        view-timeline-name: --presentacion;
        view-timeline-axis: block;
        animation-timeline: --presentacion;
        animation-name: scroll;
        animation-range: entry 25% cover 50%;
        animation-fill-mode: both;
    }

    @keyframes scroll {
        from {
            opacity: 0;
            transform: translateY(200%);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

</style>

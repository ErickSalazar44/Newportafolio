---
interface Props {
    hoverColor: string;
    ruta: string;
}

const { hoverColor, ruta } = Astro.props;
---
<a href={ruta} class="text-text3 group-hover:text-text2 dark:group-hover:text-textDark2">
    <svg
        class={`hover:${hoverColor} transition-colors p-1`}
        width='44'
        height='44'
        viewBox='0 0 24 24'
        stroke-width='1'
        stroke='currentColor'
        fill='none'
        xmlns='http://www.w3.org/2000/svg'
    >
        <path
            d='M12 16a4 4 0 100-8 4 4 0 000 8z'
            stroke-linecap='round'
            stroke-linejoin='round'></path><path
            d='M3 16V8a5 5 0 015-5h8a5 5 0 015 5v8a5 5 0 01-5 5H8a5 5 0 01-5-5z'
        ></path><path
            d='M17.5 6.51l.01-.011'
            stroke-linecap='round'
            stroke-linejoin='round'></path>
    </svg>
</a>
